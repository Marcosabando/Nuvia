# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_password_mysql
DB_NAME=photo_management_system
DB_CONNECTION_LIMIT=10

# Configuración JWT
JWT_SECRET=tu-clave-secreta-super-segura-cambia-en-produccion
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=tu-clave-refresh-token-segura
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de email (para verificación)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_email
EMAIL_FROM=noreply@tudominio.com

# Configuración de almacenamiento
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800
STORAGE_LIMIT_DEFAULT=5368709120

# URLs del frontend (para CORS)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log