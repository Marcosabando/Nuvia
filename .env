# URL base del backend (tu backend corre en puerto 3000)
VITE_API_BASE_URL=http://localhost:3000/api

# URL para archivos subidos (imágenes)
VITE_UPLOADS_URL=http://localhost:3000/uploads

# Configuración de la app
VITE_APP_NAME=Nuvia
VITE_APP_VERSION=1.0.0

# Límite de tamaño de archivos (50MB - coincide con backend)
VITE_MAX_FILE_SIZE=52428800

# Formatos de imagen permitidos
VITE_ALLOWED_IMAGE_FORMATS=image/jpeg,image/png,image/gif,image/webp

# Entorno
VITE_NODE_ENV=development